{
  "name": "aibuddy-desktop",
  "version": "1.0.0",
  "description": "AIBuddy Desktop IDE - Your intelligent coding partner",
  "main": "out/main/index.js",
  "author": "AIBuddy Studio",
  "license": "MIT",
  "homepage": "https://aibuddy.life",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThomasWDev/aibuddy-desktop"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac dmg zip",
    "package:mac:arm64": "electron-builder --mac dmg --arm64",
    "package:mac:x64": "electron-builder --mac dmg --x64",
    "package:mas": "electron-builder --mac mas",
    "package:win": "electron-builder --win nsis",
    "package:win:store": "electron-builder --win appx",
    "package:linux": "electron-builder --linux AppImage deb",
    "package:linux:snap": "electron-builder --linux snap",
    "package:all": "electron-builder --mac --win --linux",
    "publish": "electron-builder --publish always",
    "publish:mac": "electron-builder --mac --publish always",
    "publish:win": "electron-builder --win --publish always",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern dist --ignore-pattern out",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --ignore-pattern dist --ignore-pattern out",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,css,md}\"",
    "test": "echo \"No tests configured yet\" && exit 0",
    "prepare": "echo 'Ready for development'"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@amplitude/analytics-browser": "^2.11.9",
    "@anthropic-ai/sdk": "^0.26.1",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-context-menu": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@sentry/electron": "^4.18.0",
    "@tanstack/react-query": "^5.61.5",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dedent": "^1.5.3",
    "electron-store": "^8.1.0",
    "framer-motion": "^11.12.0",
    "lucide-react": "^0.439.0",
    "monaco-editor": "^0.52.2",
    "nanoid": "^5.0.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "react-textarea-autosize": "^8.5.5",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "simple-git": "^3.22.0",
    "sonner": "^1.7.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.14",
    "postcss": "^8.4.49",
    "prettier": "^3.4.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^6.4.1",
    "vitest": "^2.1.0"
  },
  "build": {
    "appId": "com.aibuddy.desktop",
    "productName": "AIBuddy",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "out/main/index.js"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "mas": {
      "category": "public.app-category.developer-tools",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "hardenedRuntime": false,
      "provisioningProfile": "build/embedded.provisionprofile"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "appx",
          "arch": ["x64"]
        }
      ],
      "publisherName": "AIBuddy Studio",
      "legalTrademarks": "AIBuddy is a trademark of AIBuddy Studio"
    },
    "appx": {
      "identityName": "AIBuddyStudio.AIBuddy",
      "publisher": "CN=YOUR_PUBLISHER_ID",
      "publisherDisplayName": "AIBuddy Studio",
      "applicationId": "AIBuddy",
      "displayName": "AIBuddy Desktop IDE",
      "languages": ["en-US"],
      "backgroundColor": "#1a1a2e"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ],
      "category": "Development",
      "maintainer": "AIBuddy Studio <support@aibuddy.life>",
      "vendor": "AIBuddy Studio"
    },
    "snap": {
      "confinement": "classic",
      "grade": "stable",
      "summary": "AI-powered coding assistant"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AIBuddy"
    },
    "publish": {
      "provider": "github",
      "owner": "ThomasWDev",
      "repo": "aibuddy-desktop"
    }
  }
}

