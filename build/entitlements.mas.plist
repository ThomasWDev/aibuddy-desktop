<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for Electron apps -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Network access for API calls -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File access - user selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- App Sandbox - REQUIRED for Mac App Store -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Allow reading/writing to user's home directory (limited) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Team ID for provisioning -->
    <key>com.apple.application-identifier</key>
    <string>$(TeamIdentifierPrefix)com.aibuddy.desktop</string>
    <key>com.apple.developer.team-identifier</key>
    <string>$(TeamIdentifierPrefix)</string>
</dict>
</plist>

